# Maintainer: Oleg Plakhotniuk <olegus8@gmail.com>
pkgname=hinance
pkgver=0.0.0dev
pkgrel=1
pkgdesc="Personal finance application for hackers."
arch=('any')
url="https://github.com/olegus8/hinance"
license=('MIT')
depends=('haskell-pretty-show' 'haskell-regex-tdfa' 'leiningen' 'python2'
         'weboob')
makedepends=('git')
source=("git+https://github.com/olegus8/hinance#tag=${pkgver}")
md5sums=('SKIP')

package() {
    cd "$srcdir/$pkgname"
    mkdir -p "${pkgdir}"/usr/{bin,lib/hinance}
    ln -s /usr/lib/hinance/hinance "${pkgdir}"/usr/bin/hinance
    cp -r src/* "${pkgdir}"/usr/lib/hinance
    install -D -m644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
